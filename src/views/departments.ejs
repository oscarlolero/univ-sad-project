<!DOCTYPE html>
<html lang="en">

<head>
    <title>University Schedules</title>
    <% include partials/head %>
</head>

<body>
    <% include partials/nav %>
    <div class="departments js_global_container" data-type="departments">
        <div class="table100 ver3 m-t-30">
            <table data-vertable="ver3">
                <thead>
                    <tr class="row100 head">
                        <th class="column100 column1">Department</th>
                        <th class="column100 columnAction">Action</td>
                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach(function(department) { %>
                    <tr class="row100">
                        <td class="column100 column1">
                            <%= department.descr %>
                        </td>
                        <td class="column100 columnAction">
                            <span data-process="edit-<%= department.department_id %>" title="Edit"><i class="fas fa-edit"></i></span>
                            <span data-process="delete-<%= department.department_id %>" title="Delete"><i class="fas fa-minus-circle"></i></span>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>
    <script src="js/edit.js"></script>

</body>

</html>